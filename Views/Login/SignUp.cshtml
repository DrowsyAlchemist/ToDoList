@using ToDoList.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model UserModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>ToDoList</title>

    <style>
        td {
            padding: 10px;
        }

        h2, p {
            padding: 10px 40px;
        }
    </style>
</head>
<body>
    <h2>SignUp Form</h2>
    <form method="post" action="SignUp">
        <p>
            <label asp-for="Name">Name</label><br />
            <input asp-for="Name" />
            <span asp-validation-for="Name" />
        </p>
        <p>
            <label asp-for="LoginData.Email">Email</label><br />
            <input asp-for="LoginData.Email" />
            <span asp-validation-for="LoginData.Email" />
        </p>
        <p>
            <label asp-for="LoginData.Password">Password</label><br />
            <input type="password" asp-for="LoginData.Password" />
            <span asp-validation-for="LoginData.Password" />
        </p>
        <p>
            <label asp-for="Avatar">Avatar</label><br />
            <input asp-for="Avatar" />
        </p>
        <input type="submit" value="Login" />
    </form>
    <h4 style="color:red; white-space: pre-line">@ViewBag.ErrorMessage</h4>
    </body>
</html>


<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>