@using ToDoList.Models
@model TaskModel

@{
    string expiresDate = string.Empty;
    string expiresTime = string.Empty;

    var date = Model.ExpiresDate;
    expiresDate = date.ToString("yyyy-MM-dd");
    expiresTime = date.ToString("hh:mm");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>ToDoList</title>

    <style>
        td {
            padding: 15px;
        }

        h2, p {
            padding: 10px 40px;
        }

        div {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <h2 style="display: inline">Меню редактирования</h2>

    <form method="post" action="UpdateTask" style="margin:15px 10px">
        <div hidden>
            <label>Id:</label><br />
            <input name="id" value="@Model.Id" /><br />
        </div>
        <div>
            <label>Lable:</label><br />
            <input name="lable" value="@Model.Lable" /><br />
        </div>
        <div>
            <label>Date:</label><br />
            <input name="date" type="date" value="@expiresDate" /><br />
        </div>
        <div>
            <label>Time:</label><br />
            <input name="time" type="time" value=@expiresTime />
            <br />
        </div>
        <div>
            <label>Status:</label><br />
            @Html.DropDownListFor(m => m.Status, Html.GetEnumSelectList(typeof(ToDoList.Models.TasksStatus)))<br />
        </div>
        <div>
            <label>Priority:</label><br />
            @Html.DropDownListFor(m => m.Priority, Html.GetEnumSelectList(typeof(Priority)))<br />
        </div>
        <div>
            <label>Description:</label><br />
            <input name="description" type="text" value="@Model.Description" />
            <br />
        </div>
        <div hidden>
            <label>UserId:</label><br />
            <input name="UserId" value="@Model.UserId" /><br />
        </div>
        <input type="submit" />
    </form>
    <h4 style="color:red; white-space: pre-line">@ViewBag.ErrorMessage</h4>
</body>
</html>